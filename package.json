{
  "name": "forge-mode",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @forge/web dev",
    "dev:mobile": "pnpm --filter @forge/mobile start",
    "dev:engine": "pnpm --filter @forge/engine dev",
    "dev:server": "pnpm --filter @forge/server dev",
    "build:web": "pnpm --filter @forge/web build",
    "build:engine": "pnpm --filter @forge/engine build",
    "build:server": "pnpm --filter @forge/server build"
  }
}
